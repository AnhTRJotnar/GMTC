<body id="page-top" class="bg-dark">
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-uppercase">Classes</h1>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
        <!-- Button to Add a New Class -->
        <div class="d-flex justify-content-start mb-4">
            <a href="/class/add" class="btn btn-secondary">Add New Class</a>
        </div>

        <!-- Class Cards Section -->
        {{#each ClassList}}
        <div class="card mb-5"> <!-- Increased margin-bottom for spacing -->
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center"> <!-- Class Title and Delete Button -->
                    <h2 class="card-title">{{title}}</h2>
                    <a href="/class/delete/{{_id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this class?')">Delete Class</a>
                </div>

                <!-- Class Details -->
                <p class="card-text"><strong>Description:</strong> {{description}}</p>
                <p class="card-text">
                    <strong>Time:</strong> {{startTime}} - {{endTime}}
                </p>
                <p class="card-text">
                    <strong>Days of the Week:</strong>
                    {{#each daysOfWeek}}
                        {{dayName this}}{{#unless @last}}, {{/unless}}
                    {{/each}}
                </p>
                <p class="card-text">
                    <strong>Starts:</strong> {{formatDate startRecur}}
                </p>
                <p class="card-text">
                    <strong>Ends:</strong> {{formatDate endRecur}}
                </p>
                
                <!-- Members Section -->
                <div class="class-members mt-4"> <!-- Additional margin-top for separation -->
                    <h4>Members:</h4>
                    <ul class="list-unstyled"> <!-- Unstyled list for members -->
                        {{#each members}}
                        <li class="d-flex justify-content-between align-items-center mb-3"> <!-- Spacing between students -->
                            <span>{{username}}</span> <!-- Member Name -->
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div> <!-- End of Class Card -->
        {{else}}
        <p class="text-center">No classes available.</p> <!-- No classes message -->
        {{/each}}
    </div> <!-- End of container -->
</body>
