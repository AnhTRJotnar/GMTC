<body id="page-top" class="bg-dark">
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-uppercase">Booking Private Session</h1>
            </div>
        </div>
    </header>

    <div class="container my-5 py-4">
        <div class="card mx-auto" style="max-width: 600px; padding: 20px;">
            <div class="container">
                <h1 class="text-center mb-4">Book a Session with Coach {{coach.username}}</h1>
                
                <!-- Display error messages, if any -->
                {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
                {{/if}}
                {{#if inputErrors}}
                    <div class="alert alert-warning">
                        {{#each inputErrors}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                {{/if}}

                <!-- Booking form -->
                <form action="/member/book-session" method="post" onsubmit="return validateForm()">
                    <input type="hidden" name="coachId" value="{{coach._id}}">

                    <div class="form-group mb-3">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" name="title" required aria-label="Session Title">
                    </div>

                    <div class="form-group mb-3">
                        <label for="description">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Provide more details about the session (optional)" aria-label="Session Description"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label for="start">Start Date and Time:</label>
                        <input type="datetime-local" class="form-control" id="start" name="start" required aria-label="Session Start Date and Time">
                    </div>

                    <!-- Submit button with consistent alignment -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Confirm Booking</button>  
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Client-side validation script -->
    <script>
        function validateForm() {
            const title = document.getElementById('title').value.trim();
            const start = document.getElementById('start').value;
            if (!title || !start) {
                alert('Please fill in all required fields.');
                return false;
            }
            return true;
        }
    </script>
</body>
